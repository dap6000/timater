{
    "name": "dap6000/timator",
    "description": "A Pomodoro REST API",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "fakerphp/faker": "1.23",
        "fig/http-message-util": "^1.1",
        "monolog/monolog": "^3",
        "nyholm/psr7": "^1.8.1",
        "nyholm/psr7-server": "^1.1",
        "php-di/php-di": "^7.0",
        "slim/http": "1.3",
        "slim/slim": "4.13.0",
        "slim/csrf": "1.4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.52",
        "phpmd/phpmd": "@stable",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "@stable",
        "phpunit/phpunit": "^11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
